@import "./variable.styl"
@import "./mixin.styl"
.emoji-picker
  height: 100%
  .emoji-container
    height: 100%
    overflow-y: auto
    overflow-x: hidden
    position: relative
    hide-scrollbar()
    scrollbar(#c7ccd7)
    li
      font-size: 0
      padding: 5px
      a
        float: left
        overflow: hidden
        height: 35px
        transition: all ease-out .2s
        border-radius: 4px
        &:hover
          background-color: #F4F5F7
          border-color: #F4F5F7
        span
          width: 25px
          height: 25px
          display: inline-block
          border: 1px solid transparent
          cursor: pointer
