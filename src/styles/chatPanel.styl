@import "./variable.styl"
@import "./mixin.styl"
.chat-panel
  flex-center(column,,start)
  background-color: #EBEBEB
  flex: 1
  overflow: hidden
  hide-scrollbar()
  .goods-info 
    position: relative
    width: 100%
    height: 70px
    background-color: #fff
    margin-top: 10px 
    flex-center()
    padding: 0 8px
    .goods-detail
      margin-left: 10px
      height: 60px
      flex-center(column,space-around,start)
      .detail-title
        font-size: 1.4rem
      .detail-price
        color: red
        font-size : 1.4rem
    .goods-btn 
      position: absolute
      right: 10px
      bottom: 4px
      padding: 6px
      background-color: #F96768
      color: #fff
      border-radius: 2px



