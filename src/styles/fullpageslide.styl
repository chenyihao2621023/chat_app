@import "./variable.styl"
.full-page-slide-wrapper
  width: 100%
  height: 100%
  padding: 20px
  background: #f5f5f5
  overflow: hidden
  .slide-move-wrap
    transition: all 5s cubic-bezier(0.77, 0, 0.175, 1)
    height: 100%
    position: relative
    .queueAnim-debug
      height: 100% 
      .slide
        height: 100%
        overflow: hidden
        &.queue-anim-leaving
          position: absolute
          width: 100%
        .slide-group
          height: 76%
          .slide-item
            height: 100%
            .full-page-img-wrapper
              position: relative
              height: 100%
              background-size: cover
              transform: translateZ(0)
              .button-wrapper
                position: fixed
                bottom: 85px
                display: block
                width: 100%
                overflow: hidden
                .button
                  display: inline-block
                  width: 130px
                  padding: 15px 0
                  border: 4px solid rgba(255, 255, 255, 0.7)
                  border-radius: 4px
                  color: rgba(255, 255, 255, 0.7)
                  font-size: $fontsize-large-xx
    .keyboard-wrapper
      position: absolute
      height: calc(100% + 40px)
      width: calc(100% + 40px)
      left: -20px
      top: -20px
      padding: 10px