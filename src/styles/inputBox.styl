@import "./variable.styl"
@import "./mixin.styl"
.input-box
  padding: 6px 10px
  background-color: #F5F5F7
  flex-center(,space-between,)
  &.border-top-1px
    border-top-1px(#E4E4E6)
  i
    color: #848388
  .voice-wrapper
    height: 36px
    padding: 0 12px
    flex: 1
    .voice-inner
      height: 100%
      width: 100%
      line-height: 100%
      border: 1px solid #E0E0E2
      border-radius: 5px
      flex-center(,center)
      font-size: 1.2rem
  .input-text
    flex: 1
    padding: 0 10px
    input
      width: 100%
      height: 36px
      border-radius: 5px
      border: 1px solid #E0E0E2
      padding: 0px 12px
      font-size: 16px
      &:focus
        outline: none
  .right
    &>i:first-child
      margin-right: .6rem
  .open-height
    height: 40px
